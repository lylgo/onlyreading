<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/mymarkback" >
    <ImageView
        android:id="@+id/markImage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="10dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/reader_bookmarks" >
    </ImageView>
    <TextView
        android:id="@+id/markword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/markImage1"
        android:lines="1"
        android:textColor="#000000" >
    </TextView>

    <TextView
        android:id="@+id/marktime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="40dip"
        android:layout_toRightOf="@id/markImage1" >
    </TextView>
    <ImageButton
        android:id="@+id/markdelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dip"
        android:layout_marginTop="30dip"
        android:background="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/reader_delete_bookmark" >
    </ImageButton>

</RelativeLayout>